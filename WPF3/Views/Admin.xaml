<UserControl x:Class="WPF3.Views.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF3.Views"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding TestList}" SelectedItem="{Binding SelectedTest}" RenderTransformOrigin="1.097,0.271" Margin="10,10,569,75"/>
        <Button Command="{Binding CreateTestCommand}" Content="Створити новий тест" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Height="24" Width="177"/>
        <Button Command="{Binding UpdateTestCommand}" Content="Змінити тест" HorizontalAlignment="Left" Margin="10,409,0,0" VerticalAlignment="Top" Height="24" Width="177"/>
        <Button Command="{Binding DeleteTestCommand}" Content="   X   " HorizontalAlignment="Left" Margin="192,409,0,0" VerticalAlignment="Top" Height="24" Width="39"/>

    </Grid>


</UserControl>
